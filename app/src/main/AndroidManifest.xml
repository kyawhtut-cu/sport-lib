<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyawhtut.lib">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.555SportLib"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Sport5Activity"
            android:label="555 Sport"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name=".FeFaTvCategoryActivity"
            android:label="Fefa Tv"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name=".VolaSportActivity"
            android:label="Vola Sport"
            android:screenOrientation="sensorPortrait" />

        <activity
            android:name=".PlayerActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/PlayerTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>
